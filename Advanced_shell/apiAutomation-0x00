#!/bin/bash

# PokÃ©mon API endpoint for Pikachu
URL="https://pokeapi.co/api/v2/pokemon/pikachu"

# Output files
DATA_FILE="data.json"
ERROR_FILE="errors.txt"

# Make the API request
curl -s -o "$DATA_FILE" -w "%{http_code}" "$URL" > status_code.txt

# Check the HTTP status code
STATUS=$(cat status_code.txt)
rm status_code.txt

if [ "$STATUS" -ne 200 ]; then
    echo "Error: Failed to fetch data for Pikachu (HTTP status: $STATUS)" >> "$ERROR_FILE"
    exit 1
fi

echo "Data successfully saved to $DATA_FILE"
