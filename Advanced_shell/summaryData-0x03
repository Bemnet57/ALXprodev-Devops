#!/bin/bash

# Directory containing PokÃ©mon JSON files
DATA_DIR="pokemon_data"
REPORT_FILE="pokemon_report.csv"

# Create CSV header
echo "Name,Height (m),Weight (kg)" > "$REPORT_FILE"

# Loop through all JSON files and extract data
for file in "$DATA_DIR"/*.json; do
    name=$(jq -r '.name' "$file" | sed 's/.*/\u&/')
    height=$(jq -r '.height' "$file" | awk '{printf "%.1f", $1/10}')
    weight=$(jq -r '.weight' "$file" | awk '{printf "%.1f", $1/10}')
    echo "$name,$height,$weight" >> "$REPORT_FILE"
done

# Display confirmation
echo "CSV Report generated at: $REPORT_FILE"
echo
cat "$REPORT_FILE"
echo

# Calculate averages using awk
awk -F, 'NR>1 {h+=$2; w+=$3; count++} 
END {printf "\nAverage Height: %.2f m\nAverage Weight: %.2f kg\n", h/count, w/count}' "$REPORT_FILE"
