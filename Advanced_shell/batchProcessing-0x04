#!/bin/bash

# Output directory
OUTPUT_DIR="pokemon_data"
mkdir -p "$OUTPUT_DIR"

# Pokémon list
pokemon_list=("bulbasaur" "ivysaur" "venusaur" "charmander" "charmeleon")

# API base URL
API_URL="https://pokeapi.co/api/v2/pokemon"

# Function to fetch data for a single Pokémon
fetch_pokemon() {
    local pokemon=$1
    echo "Fetching data for $pokemon..."
    if curl -s -o "$OUTPUT_DIR/${pokemon}.json" "$API_URL/$pokemon"; then
        echo "Saved data to $OUTPUT_DIR/${pokemon}.json ✅"
    else
        echo "Error fetching data for $pokemon" >&2
    fi
}

# Loop through list and run fetch in background
for pokemon in "${pokemon_list[@]}"; do
    fetch_pokemon "$pokemon" &
done

# Wait for all background processes to finish
wait

echo "All Pokémon data fetched successfully."
